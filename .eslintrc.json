{
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": [ "test/**/*" ],
      "globals": {
        "describe": true,
        "before": true,
        "beforeEach": true,
        "afterEach": true,
        "inject": true,
        "it": true,
        "expect": true
      },
      "rules": {
        "no-unused-vars": "off",
        "no-new": "off"
      }
    }
  ]
}